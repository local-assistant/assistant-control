{
  "name": "assistant-control",
  "displayName": "assistant-control",
  "publisher": "nishant",
  "description": "Autonomous assistant control",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "assistant",
          "title": "Assistant",
          "icon": "media/list-check.png"
        }
      ]
    },
    "commands": [
      {
        "command": "assistant.sendClipboardAsTask",
        "title": "Assistant: Send Clipboard as Task"
      },
      {
        "command": "assistant.refreshTasks",
        "title": "Assistant: Refresh Tasks"
      },
      {
        "command": "assistant.viewTaskLogs",
        "title": "Assistant: View Task Logs"
      },
      {
        "command": "assistant.openTaskResult",
        "title": "Assistant: Open Task Result"
      },
      {
        "command": "assistant.cancelTask",
        "title": "Assistant: Cancel Task"
      },
      {
        "command": "assistant.retryTask",
        "title": "Assistant: Retry Task"
      }
    ],
    "keybindings": [
      {
        "command": "assistant.sendClipboardAsTask",
        "key": "ctrl+alt+enter"
      }
    ],
    "views": {
      "assistant": [
        {
          "id": "assistantTasks",
          "name": "Tasks"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "assistant.openTaskResult",
          "when": "view == assistantTasks && (viewItem == assistantTask.running || viewItem == assistantTask.done || viewItem == assistantTask.failed || viewItem == assistantTask.cancelled)",
          "group": "navigation"
        },
        {
          "command": "assistant.cancelTask",
          "when": "view == assistantTasks && viewItem == assistantTask.running",
          "group": "navigation"
        },
        {
          "command": "assistant.retryTask",
          "when": "view == assistantTasks && (viewItem == assistantTask.failed || viewItem == assistantTask.cancelled)",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}